<Window x:Class="Musiq.View.NewMusic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musiq.View"
        mc:Ignorable="d"
        Title="NewMusic" Height="330" Width="300" ResizeMode="NoResize" WindowStyle="None" DataContext="{Binding Source={StaticResource Locator}, Path=NewMusic}">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Height" Value="20" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Button Width="40" Margin="20,0,0,0" Grid.Row="1" HorizontalAlignment="Left">
            Add
        </Button>
        <Button Width="40" Margin="0,0,20,0" Grid.Row="1" HorizontalAlignment="Right">
            Cancel
        </Button>
    </Grid>
</Window>
